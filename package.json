{
  "name": "musortv-epg-parser",
  "version": "1.0.0",
  "description": "Musor.tv EPG parser",
  "main": "dist/src/main.js",
  "scripts": {
    "start": "node ./dist/server/src/server/main.js",
    "watch:server": "tsc-watch -p tsconfig.server.json --noClear --onSuccess \"npm run start\"",
    "watch:client": "webpack -w",
    "dev": "npm run watch:server & npm run watch:client",
    "build": "rimraf dist && npm run build:client && npm run build:server",
    "build:client": "rimraf dist/client && webpack",
    "build:server": "rimraf dist/server && tsc -p tsconfig.server.json"
  },
  "devDependencies": {
    "@types/cheerio": "0.22.18",
    "@types/express": "4.17.6",
    "@types/lowdb": "^1.0.9",
    "@types/node": "12.12.6",
    "@types/ramda": "0.27.6",
    "typescript": "3.9.5",
    "tsc-watch": "4.2.8"
  },
  "dependencies": {
    "cheerio": "1.0.0-rc.3",
    "cli-progress": "3.8.2",
    "concurrently": "^5.2.0",
    "date-fns": "2.14.0",
    "express": "4.17.1",
    "express-basic-auth": "1.2.0",
    "got": "11.3.0",
    "lowdb": "1.0.0",
    "ramda": "0.27.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "rimraf": "3.0.2",
    "slugify": "1.4.0",
    "tough-cookie": "4.0.0",
    "ts-loader": "7.0.5",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12"
  }
}
